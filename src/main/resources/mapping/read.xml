    </resultMap>

    <resultMap type="com.sf.entity.MessageEntity" id="MessageMap">
        <result property="messageId" column="messageID"/>
        <result property="messageVideoId" column="messagevideoID"/>
        <result property="messageUserId" column="messageuserID"/>
        <result property="messageUserName" column="messageuserName"/>
        <result property="message" column="message"/>
        <result property="messageTime" column="messageTime"/>
        <result property="messageHand" column="messageHand"/>
    </resultMap>

    <resultMap type="com.sf.entity.ShoppingCart" id="ShoppingCartMap">
        <result property="cartId" column="cartID"/>
        <result property="userName" column="userName"/>
        <result property="shoppingId" column="shoopingID"/>
        <result property="shoppingName" column="shoopingName"/>
        <result property="shoppingImg" column="shoopingImg"/>
        <result property="shoppingPrice" column="shoopingjiage"/>
    </resultMap>

    <select id="queryUserByUserNameAndPassWord" parameterType="java.util.Map" resultMap="UserMap">
        SELECT * FROM user WHERE userName = #{userName} and passWord = #{passWord}
    </select>

    <select id="queryUserByUserNameAndEmail" parameterType="java.util.Map" resultMap="UserMap">
        SELECT * FROM user WHERE userName = #{userName} and userEmail = #{userEmail}
    </select>

    <select id="queryUserByUserNameAndPhone" parameterType="java.util.Map" resultMap="UserMap">
        SELECT * FROM user WHERE userName = #{userName} and userPhone = #{userPhone}
    </select>

    <select id="queryUserByUserNameAndPayPassword" parameterType="java.util.Map" resultMap="UserMap">
        SELECT * FROM user WHERE userName = #{userName} and userPaypassword = #{userPayPassword}
    </select>

    <select id="queryUserByUserNameAndUserHand" parameterType="java.util.Map" resultMap="UserMap">
        SELECT * FROM user WHERE userName = #{userName} and userHand = #{userHand}
    </select>

    <select id="queryUserByUserName" parameterType="java.lang.String" resultMap="UserMap">
        SELECT * FROM user WHERE userName = #{userName}
    </select>

    <select id="queryVideoByCategory" parameterType="java.lang.String" resultMap="VideoMap">
        select * from video where videocAtegory=#{videoCategory} order by rand() limit 8
    </select>

    <select id="queryVideoLimit" parameterType="int" resultMap="VideoMap">
        select * from video order by rand() limit #{limit}
    </select>

    <select id="queryMessageByMessageVideoId" parameterType="java.lang.String" resultMap="MessageMap">
        select * from message WHERE messagevideoId=#{messageVideoId} order by STR_TO_DATE(messageTime,'%m/%d/%Y %h:%i:%s %p') desc
    </select>

    <select id="queryUserPagination" parameterType="int" resultMap="UserMap">
        SELECT * FROM user LIMIT #{startPage},15
    </select>

    <select id="queryUserByUserMingzi" parameterType="java.lang.String" resultMap="UserMap">
        select * from user where userMingzi LIKE #{userMoHu}
    </select>

    <select id="queryUserByPhone" parameterType="java.lang.String" resultMap="UserMap">
        select * from user where userPhone LIKE #{userPhone} order by rand() limit 3
    </select>

    <select id="queryUserByUserId" parameterType="java.lang.String" resultMap="UserMap">
        select * from user where userID=#{userId}
    </select>

    <select id="queryUserByUserState" parameterType="java.lang.String" resultMap="UserMap">
        select * from user where userState=#{userState}
    </select>

    <select id="queryVideoPagination" parameterType="java.util.Map" resultMap="VideoMap">
        SELECT * FROM video WHERE videocAtegory = #{videoCategory} LIMIT #{startPage},#{numPerPage}
    </select>

    <select id="queryVideoNum" resultType="int">
        select count(*) from video
    </select>

    <select id="queryGrids" resultMap="GridsMap">
        select * from grids
    </select>

    <select id="queryGridsByGridsId" parameterType="java.lang.String" resultMap="GridsMap">
        select * from grids where gridsID = #{gridsId}
    </select>

    <select id="queryShoppingCartByUserName" parameterType="java.lang.String" resultMap="ShoppingCartMap">
        select * from shoppingcart where userName = #{userName}
    </select>

    <select id="queryOrderTableByUserName" parameterType="java.lang.String" resultMap="OrderMap">
        select * from ordertable where OrderuserName=#{userName}
    </select>

    <select id="queryOrderTable" resultMap="OrderMap">
        select * from ordertable
    </select>

    <select id="queryOrderTableByOrderState" parameterType="java.lang.String" resultMap="OrderMap">
        select * from ordertable where orderStat=#{orderState}
    </select>

    <select id="queryOrderTableByOrderIdAndOrderState" parameterType="java.util.Map" resultMap="OrderMap">
        select * from ordertable where orderId = #{orderId} and orderStat=#{orderState}
    </select>

    <select id="queryOrderTableCount" resultType="int">
        SELECT count(*) FROM ordertable
    </select>

    <select id="queryForumByForumLieBie" parameterType="java.lang.String" resultMap="ForumMap">
        select * from forum where forumliebie = #{forumLiebie} Order By forumTime Desc
    </select>

    <select id="queryForumByForumId" parameterType="java.lang.String" resultMap="ForumMap">
        select * from forum where forumID = #{forumId} Order By forumTime Desc
    </select>

    <select id="queryUserCount" resultType="int">
        SELECT count(*) FROM user
    </select>

    <select id="queryForumReplyByForumReplyId" parameterType="java.lang.String" resultMap="ForumReplyMap">
        select * from forumreply where replytieziid = #{replyTieziId} Order By replytime Desc
    </select>

</mapper>